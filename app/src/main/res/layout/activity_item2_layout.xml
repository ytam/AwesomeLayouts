            layout="@layout/activity_item2" />

        <include
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_item2" />

        <include
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_item2" />

        <include
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_item2" />

        <include
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_item2" />


    </LinearLayout>





</ScrollView>

